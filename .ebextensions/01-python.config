files:
  "/opt/python/run/venv/activate_this_custom.py":
    mode: "000644"
    owner: root
    group: root
    content: |
      import sys
      sys.path.append("/var/app/staging/src")

container_commands:
  01_add_pythonpath:
    command: "echo 'PYTHONPATH=/var/app/staging/src:$PYTHONPATH' >> /opt/python/run/env"

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: application:application
